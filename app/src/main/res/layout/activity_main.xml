<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.taewonkim.android.materialdesignpropertyanimationspreadcube.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/ground">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/abc_btn_colored_borderless_text_material"
            android:background="@android:color/holo_blue_bright" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button2"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/abc_search_url_text_normal"
            android:background="@android:color/holo_red_light" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/abc_search_url_text_pressed"
            android:background="@android:color/holo_red_dark" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button4"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/holo_purple" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button5"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/holo_orange_dark"
            android:background="@android:color/holo_orange_light" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button6"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/holo_purple"
            android:background="@android:color/holo_orange_dark" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button7"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/darker_gray"
            android:background="@android:color/holo_green_light" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#306646"
            android:background="@android:color/holo_green_dark" />

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/button9"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_blue_dark" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPREAD"
        android:id="@+id/btnSpr"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="spread" />
</RelativeLayout>
